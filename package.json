{
  "name": "bionicle",
  "type": "module",
  "version": "0.0.1",
  "description": "",
  "watch": {
    "atlas": {
      "ignore": "build",
      "patterns": [
        "asset/images"
      ],
      "extensions": "png,gif",
      "delay": 1000,
      "runOnChangeOnly": true
    }
  },
  "scripts": {
    "buildClient": "rollup -c config/rollup-client.js -w",
    "buildServer": "rollup -c config/rollup-server.js -w",
    "host": "http-server -p 80 -o -a localhost",
    "atlas": "node script/atlas.js config/atlas.json",
    "watch": "npm-watch",
    "test": "jest --watch --env=jsdom"
  },
  "author": "Spencer Beckwith",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.15.5",
    "@babel/preset-env": "^7.15.4",
    "@babel/preset-typescript": "^7.15.0",
    "@rollup/plugin-typescript": "^8.2.5",
    "@types/jest": "^27.0.1",
    "async": "^2.6.3",
    "babel-jest": "^27.1.1",
    "fs": "*",
    "gifwrap": "^0.9.2",
    "http-server": "^13.0.1",
    "jest": "^27.1.1",
    "jimp": "^0.16.1",
    "npm-watch": "^0.11.0",
    "rollup": "^2.56.3",
    "rollup-plugin-terser": "^7.0.2",
    "typescript": "^4.4.2"
  },
  "dependencies": {
    "deepfreeze": "^2.0.0"
  }
}
